<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="movie"
            type="pl.piotrkulma.popularmoviesstage1.model.MovieDBResponse"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="101dp"
                    android:id="@+id/title"
                    tools:text="@string/mock_movie_title"
                    android:textSize="36sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:background="@color/colorPrimaryMovie"
                    tools:background="@color/colorPrimaryMovie"
                    android:textColor="@android:color/background_light"
                    android:text="@{movie.title}"
                    app:layout_constraintHorizontal_bias="0.0"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:padding="0dp"
                    android:gravity="center_vertical|center_horizontal" />

                <ImageView
                    android:layout_width="129dp"
                    android:layout_height="205dp"
                    app:srcCompat="@mipmap/ic_launcher"
                    android:id="@+id/poster"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:contentDescription="@string/poster_description"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="20dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:id="@+id/releaseDate"
                    tools:text="@string/mock_movie_release_date"
                    android:textSize="34sp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/poster"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/title"
                    android:text="@{movie.releaseDateYear}"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp" />

                <TextView
                    tools:text="@string/mock_movie_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/duration"
                    android:textSize="24sp"
                    android:text="@{movie.runtimeFull}"
                    android:padding="0dp"
                    android:paddingEnd="0dp"
                    android:paddingBottom="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/poster"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/releaseDate" />

                <TextView
                    tools:text="@string/mock_movie_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rating"
                    android:textSize="24sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/duration"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/poster"
                    android:layout_marginLeft="8dp"
                    android:padding="0dp"
                    android:text="@{movie.voteAgerageFull}"
                    android:paddingBottom="0dp"
                    android:paddingEnd="0dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="0dp"
                    android:paddingStart="0dp"
                    android:paddingTop="0dp" />

                <TextView
                    tools:text="@string/mock_movie_synopsis"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/synopsis"
                    android:textSize="20sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/poster"
                    android:layout_marginStart="20dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginRight="20dp"
                    android:text="@{movie.plotSynopsis}"/>

                <ImageView
                    android:layout_width="63dp"
                    android:layout_height="68dp"
                    app:srcCompat="@android:drawable/star_big_off"
                    android:id="@+id/favorite"
                    android:layout_marginStart="8dp"
                    app:layout_constraintLeft_toRightOf="@+id/poster"
                    android:layout_marginLeft="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/rating" />
            </android.support.constraint.ConstraintLayout>
            <LinearLayout
                android:id="@+id/movie_trailers"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
            <LinearLayout
                android:id="@+id/movie_reviews"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>